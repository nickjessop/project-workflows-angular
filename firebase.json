{
    "hosting": [
        {
            "public": "dist/authentication",
            "target": "authentication",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "site": "stepflow-app",
            "public": "dist/stepflow",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ],
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ],
        "headers": [
            {
                "key": "Access-Control-Allow-Origin",
                "value": "https://app.stepflow.co/*"
            }
        ]
    }
}
